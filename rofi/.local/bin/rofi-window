#!/bin/sh

rofi -show windowcd \
    -kb-accept-entry '' \
    -kb-accept-alt 'Return,Super_L' \
    -window-command 'herbstclient jumpto {window}' \
    -window-format '{t}' \
    -theme-str 'window {width: 50%;}' \
    -theme-str 'listview {lines: 7;}' \
    -theme-str 'entry {placeholder: "Focus a window...";}' \
    -modi windowcd
