## Desktop

# Toggle layout
super + m
    bspc desktop -l next

# Focus
super + {1-5}
    bspc desktop -f '^{1-5}'

## Window

# Close, Kill
super + {_, shift} + q
    bspc node -{c,k}

# Send to desktop
super + shift + {1-5}
    bspc node -d '^{1-5}' --follow

# State
super + {s,f}
    bspc node -t {floating,fullscreen}

super + t
    id="$(bspc query -N -n focused.floating)"; \
    bspc node -t tiled; \
    test -n "$id" && bspc node --to-node any.!automatic

# Center
super + c
    centerize

# Hide
super + x
    bspc node -g hidden=on

# Focus, Move, Float
super + {_,shift} + {h,j,k,l}
    {bspc node -f,move} {west,south,north,east}
super + {n,p}
    bspc node -f {next,prev}.local.floating.!hidden
super + shift + s; {k,space,j}; {h,space,l}
    command float {top,middle,bottom} {left,center,right}

# Preselect
super + ctrl + {h,j,k,l,space}
    bspc node -p {west,south,north,east,cancel}

# Expand
super + alt + {h,j,k,l}
    bspc node -z {left -50 0,bottom 0 50,top 0 -50,right 50 0}

# Contract
super + alt + shift + {h,j,k,l}
    bspc node -z {right -50 0,top 0 50,bottom 0 -50,left 50 0}

# Flag
super + g; {s}
    bspc node -g {sticky}

## Misc

# Terminal
super + Return
    alacritty

# Reload sxhkdrc
super + Escape
    pkill -USR1 -x sxhkd

# Brightness
XF86MonBrightness{Down,Up}
    light {-U,-A} 5
XF86ScreenSaver
    xset dpms force off

# Pulseaudio
{_,shift} + XF86Audio{Lower,Raise}Volume
    pactl {set-sink-volume @DEFAULT_SINK@, set-source-volume @DEFAULT_SOURCE@} {-3%,+3%}
{_,shift} + XF86AudioMute
    pactl {set-sink-mute @DEFAULT_SINK@, set-source-mute @DEFAULT_SOURCE@} toggle

# Screenshot
@Print + {_,shift,ctrl}
    shot {--,-s,-d}

# Rofi
super + {@space,Tab}
    rofi{ -show drun,-window}

# Caps lock indicator 
@Caps_Lock
    source $XDG_CONFIG_HOME/lemonbar/config; \
    pgrep -x panel && $XDG_CONFIG_HOME/lemonbar/modules/capslock > $PANEL_FIFO

# Dunst
super + d; {d,a,h,c}
    dunstctl {close,close-all,history-pop,context}

# mpc
XF86Audio{Stop,Play,Next,Prev}
    mpc {stop,toggle,next,prev}
