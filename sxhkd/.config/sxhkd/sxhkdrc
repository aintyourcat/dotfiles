## Desktop

# Toggle layout
super + m
    bspc desktop -l next

# Focus
super + {1-5}
    bspc desktop -f '^{1-5}'

## Window

# Close, Kill
super + {_, shift} + q
    bspc node -{c,k}

# Send to desktop
super + shift + {1-5}
    bspc node -d '^{1-5}'

# State
super + {t,s,f}
    bspc node -t {tiled,floating,fullscreen}

# Center
super + c
    centerize

# Hide
super + x
    bspc node -g hidden=on

# Focus, Move
super + {_,shift} + {h,j,k,l}
    {bspc node -f,move} {west,south,north,east}
super + n
    bspc node -f next.local.floating

# Preselect
super + ctrl + {h,j,k,l,space}
    bspc node -p {west,south,north,east,cancel}

# Expand
super + alt + {h,j,k,l}
    bspc node -z {left -50 0,bottom 0 50,top 0 -50,right 50 0}

# Contract
super + alt + shift + {h,j,k,l}
    bspc node -z {right -50 0,top 0 50,bottom 0 -50,left 50 0}

## Misc

# Terminal
super + Return
    alacritty

# Reload sxhkdrc
super + Escape
    pkill -USR1 -x sxhkd

# Brightness
XF86MonBrightness{Down,Up}
    light {-U,-A} 5
XF86ScreenSaver
    xset dpms force off

# Pulseaudio
{_,shift} + XF86Audio{Lower,Raise}Volume
    pactl {set-sink-volume @DEFAULT_SINK@, set-source-volume @DEFAULT_SOURCE@} {-5%,+5%}
{_,shift} + XF86AudioMute
    pactl {set-sink-mute @DEFAULT_SINK@, set-source-mute @DEFAULT_SOURCE@} toggle

# Screenshot
@Print + {_,shift,ctrl}
    shot {--,-s,-d}

# Rofi
super + {@space,Tab}
    rofi{ -show drun,-window}

# Caps lock indicator 
@Caps_Lock
    source $XDG_CONFIG_HOME/lemonbar/config; \
    pgrep -x panel && $XDG_CONFIG_HOME/lemonbar/modules/capslock > $PANEL_FIFO

# Dunst
super + d; {d,a,h,c}
    dunstctl {close,close-all,history-pop,context}
